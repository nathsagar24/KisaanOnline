<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="45dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    >
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/profile_icon"
        android:textSize="10dp"
        />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textColor="@color/colorBlack"
        android:textSize="10dp"
        />
</LinearLayout>

    <NumberPicker
        android:id="@+id/quantity_picker"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:solidColor="@color/colorPrimary"
        android:paddingLeft="5dp"
        />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="Product Price"
        android:textColor="@color/colorBlack"
        android:paddingLeft="5dp"
        android:textSize="10dp"
        />

    <TextView
        android:id="@+id/discount"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="Discount"
        android:textColor="@color/colorBlack"
        android:paddingLeft="5dp"
        android:textSize="10dp"
        />

    <TextView
        android:id="@+id/total_product_price"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="Total Product Price"
        android:textColor="@color/colorBlack"
        android:paddingLeft="5dp"
        android:textSize="10dp"
        />

    <TextView
        android:id="@+id/gst_percent"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="GST Percent"
        android:textColor="@color/colorBlack"
        android:paddingLeft="5dp"
        android:textSize="10dp"
        />

    <TextView
        android:id="@+id/gst_amt"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="GST Amt"
        android:textColor="@color/colorBlack"
        android:paddingLeft="5dp"
        android:textSize="10dp"
        />

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/close_icon"
        android:layout_gravity="center"
        android:paddingLeft="5dp"
        />
</LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        />
</LinearLayout>