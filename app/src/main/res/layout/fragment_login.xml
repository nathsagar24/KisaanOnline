<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<LinearLayout
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.LoginFragment">

    <ImageView
        android:paddingTop="15dp"
        android:id="@+id/login_close_btn"
        android:layout_width="@dimen/close_icon_dimension"
        android:layout_height="@dimen/close_icon_dimension"
        android:src="@mipmap/close_icon"
        android:layout_gravity="right"
        />

    <ImageView
        android:paddingTop="15dp"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nav_header_desc"
        android:background="@color/colorPrimary"
        app:srcCompat="@mipmap/kisaanonlineicon" />

    <TextView
        android:paddingTop="15dp"
        android:id="@+id/online_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name :-"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username or Email"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/user_name_or_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangular_edittext"
        android:focusable="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorBlack"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:inputType="textPassword"
        android:background="@drawable/rectangular_edittext"
        android:focusable="true"
        />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Login"
        android:backgroundTint="@color/colorGreen"
        android:textColor="@color/colorPrimary"

        />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textAllCaps="false"
        />

    </LinearLayout>
</LinearLayout>
 </ScrollView>